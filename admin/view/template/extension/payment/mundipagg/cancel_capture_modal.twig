<!-- Modal -->
<div class="modal fade" id="orderActionsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="loader">
            {% include mundipagg_loader %}
        </div>
        <div class="modal-content" style="display: none;">
            <div class="modal-header">
                <h3 class="modal-title" id="modalTitle"></h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                <div class="modal-body" >
                    <div >
                        <h4>{{ text.charge_information }}</h4>
                        <p>Id: <b class="info" id="chargeId"></b></p>
                        <input type="hidden" value="" id="orderId"/>
                        <p>{{ text.amount }}: <b class="info" id="chargeAmount"></b></p>
                        <p>{{ text.payment_method }}: <b class="info" id="chargePaymentMethod"></b></p>
                        <div class="form-group required col-sm-12 ">
                            <label class="col-sm-12 form-group info" id="howDoYouWant"></label>
                            <div class="col-sm-10">
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="action[]" id="action_total" value="total" class="actionInputs"> <span class="info" id="totalActionText"></span>
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="action[]" id="action_partial" value="partial" class="actionInputs"> <span class="info" id="partialActionText"></span>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group required col-sm-12 chargeAmount" style="display: none">
                                <div class="input-group">
                                    <span class="input-group-addon info" id="currencySymbol"></span>
                                    <input type="number" step="0.01" max="" min="0" value="" name="selectedAmount" class="form-control info" id="selectedAmount" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" value="" id="actionButton" disabled="disabled"></button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ text.close }}</button>
                </div>
        </div>
    </div>
</div>