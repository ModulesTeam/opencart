<!-- Modal -->
<div class="modal fade" id="orderActionsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="loader">
            {% include mundipagg_loader %}
        </div>

        <div class="modal-content" style="display: none;">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Capturar cobrança</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" >
                <div >
                    <h4>Informações da cobrança</h4>
                    <p>Id: <b>ch_x6WoaeNoiMtGnRrv</b></p>
                    <p>Valor: <b>R$105,00</b></p>
                    <p>Método de Pagamento: <b>boleto</b></p>

                    <div class="form-group required col-sm-12 ">
                        <label class="col-sm-12 form-group">Como você gostaria de capturar esta cobrança?</label>
                        <div class="col-sm-10">
                            <div class="radio">
                                <label>
                                    <input type="radio" name="action[]" id="action_total" value="total" class="actionInputs"> Capturar totalmente
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="action[]" id="action_partial" value="partial" class="actionInputs"> Capturar parcialmente
                                </label>
                            </div>
                        </div>
                        <div class="form-group required col-sm-12 chargeAmount" style="display: none">
                            <div class="input-group">
                                <span class="input-group-addon">{{ currency_code }}R$</span>
                                <input type="text" value="{{ charge_amount }}" name="charge_amount" class="moedaReal form-control">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Capture</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>