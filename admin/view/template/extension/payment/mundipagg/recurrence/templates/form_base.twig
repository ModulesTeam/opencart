<label class="col-sm-12 form-group">Nome</label>
<div class="form-group required">
    <div class="col-sm-10">
        <input type="text" name="name" value="" placeholder="" id="" class="form-control">
    </div>
</div>

<label class="col-sm-12 form-group">Descrição</label>
<div class="form-group">
    <div class="col-sm-10">
        <textarea type="text" name="description" value="" placeholder="" id="" class="form-control"></textarea>
    </div>
</div>

<label class="col-sm-12 form-group">Métodos de pagamento</label>
<div class="form-group required">
    <div class="col-sm-10">
        <div class="checkbox">
            <label>
              <input type="checkbox" name="payment_method[]" id="checkbox-creditcard" value="credit_card"> Credit Card
            </label>
        </div>
        <div class="checkbox">
            <label>
              <input type="checkbox" name="payment_method[]" id="checkbox-boleto" value="boleto"> Boleto
            </label>
        </div>
    </div>
</div>

<div class="installment">
    <label class="col-sm-12 form-group">Permite parcelamento</label>
    <div class="form-group required">
        <div class="col-sm-10">
            <select name="allow_installment" id="allow_installment" class="form-control">
                <option value="1"> Sim </option>
                <option value="0"> Não </option>
            </select>
        </div>
    </div>
</div>
<hr>
<div class="form-group required">
    <label class="col-sm-5">Vencimento</label>
    <label class="col-sm-5">Dia</label>

    <div class="col-sm-5">
        <select name="expiry_type" id="expiry_type" class="form-control">
            <option>Dia exato</option>
            <option>Dia útil</option>
        </select>
    </div>
    <div class="col-sm-5">
        <select name="expiry_date" id="expiry_date" class="form-control">
            <option>01</option>
            <option>02</option>
            <option>03</option>
            <option>04</option>
            <option>05</option>
            <option>06</option>
            <option>07</option>
            <option>08</option>
            <option>09</option>
            <option>10</option>
        </select>
    </div>
</div>

<script>

    $('.installment').hide();
    $('#checkbox-creditcard').change(function () {
            return $('.installment').toggle();
    });

</script>
