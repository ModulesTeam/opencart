    <label class="col-sm-3">Repetições</label>
    <label class="col-sm-3">Intervalo</label>
    <label class="col-sm-6">Desconto</label>
    <div class="frequency">
        <div class="col-sm-3">
            <select id="frequency" class="form-control">
                <option>01</option>
                <option>02</option>
                <option>03</option>
                <option>04</option>
                <option>05</option>
                <option>06</option>
                <option>07</option>
                <option>08</option>
                <option>09</option>
