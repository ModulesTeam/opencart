        <div class="col-sm-3">
            <select id="interval" class="form-control">
                <option>Mensal</option>
                <option>Semestral</option>
            </select>
        </div>
        <div class="col-sm-3">
            <div class="input-group">
                <div class="input-group-btn bs-dropdown-to-select-group">
