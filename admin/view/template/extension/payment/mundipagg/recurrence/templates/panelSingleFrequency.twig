                        <li data-value="fixed"><a href="#">R$</a></li>
                        <li data-value="percent"><a href="#">%</a></li>
                    </ul>
                </div><!-- /btn-group -->
                <input type="number" step="0.01" min="0" class="form-control discount" id="discount">
            </div><!-- /input-group -->
        </div>
        <div class="col-sm-3">
            <button type="submit" form="form-product" title="" class="btn btn-primary btn-add-frequency" data-original-title="Save"><i class="fa fa-plus-circle"></i> </button>
