                        <li><a href="#tab-logs" data-toggle="tab" title="{{ logs.label }}">{{ logs.label }}</a></li>
                        <li><a href="#tab-recurrence" data-toggle="tab" title="{{ recurrence.title }}">{{ recurrence.title }}</a></li>
                    </ul>

		            <div class="tab-content">
		                <div class="tab-pane active" id="tab-general">
                            <div class="panel-heading">
                                <h3>{{ general.module_section }}</h3>
                            </div>
                            <div class="form-group">
			                    <label class="col-sm-2 control-label" for="module-enabled">{{ misc.enabled }}</label>
			                    <div class="col-sm-10">
                                {% if not settings.general_status %}
                                    <label class="radio-inline"><input type="radio" name="payment_mundipagg_status" id="module-enabled" value="1">{{ misc.yes }}</label>
                                    <label class="radio-inline"><input type="radio" name="payment_mundipagg_status" id="module-disabled" value="0" checked="checked">{{ misc.no }}</label>
                                {% elseif settings.general_status == '0' %}
                                    <label class="radio-inline"><input type="radio" name="payment_mundipagg_status" id="module-enabled" value="1">{{ misc.yes }}</label>
                                    <label class="radio-inline"><input type="radio" name="payment_mundipagg_status" id="module-disabled" value="0" checked="checked">{{ misc.no }}</label>
                                {% elseif settings.general_status == '1' %}
                                    <label class="radio-inline"><input type="radio" name="payment_mundipagg_status" id="module-enabled" value="1" checked="checked">{{ misc.yes }}</label>
                                    <label class="radio-inline"><input type="radio" name="payment_mundipagg_status" id="module-disabled" value="0">{{ misc.no }}</label>
                                {% endif %}
			                    </div>
			                </div>

			                <div class="form-group required">
			                    <label class="col-sm-2 control-label" for="payment-title">{{ general.payment_title }}</label>
			                    <div class="col-sm-10">
                                    <input type="text" name="payment_mundipagg_title" placeholder="{{ general.payment_title }}" id="payment-title" class="form-control" value="{{ settings.general_payment_title }}"/>
			                    </div>
                            </div>


                            <div class="panel-heading">
                                <h3>{{ general.mapping_section }}</h3>
                            </div>
                            <div class="form-group required">
                                <label class="col-sm-2 control-label" for="mapping-number">{{ general.mapping_number }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_mundipagg_mapping_number" id="mapping-number" class="form-control" title="{{ general.mapping_number }}"/>
                                        <option value=''> -- {{ general.select }} -- </option>
                                        {% for custom_field in general_custom_fields %}
                                            {% if custom_field.custom_field_id == settings.general_mapping_number %}
                                                {% set selected = "selected='selected'" %}
                                            {% else %}
                                                {% if settings.general_mapping_number == '' and custom_field.name == general.mapping_number %}
                                                    {% set selected = "selected='selected'" %}
                                                {% else %}
                                                    {% set selected = '' %}
                                                {% endif %}
                                            {% endif %}
                                            <option {{ selected }} value="{{ custom_field.custom_field_id }}">{{ custom_field.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group required">
                                <label class="col-sm-2 control-label" for="mapping-complement">{{ general.mapping_complement }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_mundipagg_mapping_complement" id="mapping-complement" class="form-control" title="{{ general.mapping_complement }}"/>
