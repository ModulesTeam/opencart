                            <div class="credit-card-configuration-by-brand">
                                {% for cC in creditCard %}

                                    {% if cC['brand_name'] != "Default" %}
                                        {% set class = "optionByFlag" %}
                                        {% set onchange = "" %}
                                    {% else %}
                                        {% set class = "optionByDefault" %}
                                        {% set onchange = "onchange='defaultInstallments()'" %}
                                    {% endif %}

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" for="CC-{{ cC['brand_name'] }}" >
                                            {%  if cC['brand_name'] == "Default" %}
                                                One configuration for all brands
                                            {% endif %}

                                            {% if cC['image'] %}
                                                <img src="{{ cC['image'] }}" width="30" title="{{ cC['brand_name'] }}" alt="{{ cC['brand_name'] }}"/>
                                            {% endif %}
                                        </label>
