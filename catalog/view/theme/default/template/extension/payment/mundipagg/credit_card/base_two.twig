<div class="tab-pane" id="twoCreditCardsTab">
    {% if brandNames %}
        <div class="row">
            <h3 class="col-sm-12">Pagamento com 2 cartões de crédito</h3>
        </div>

        <form action="index.php?route=extension/payment/mundipagg/processTwoCreditCards" method="post" data-mundicheckout-form>
            {% include brandsTemplate  %}

            {%  set amount = amount/2 %}

            <h3>Primeiro cartão</h3>
            {%  set inputId = 1 %}
            {% include savedCreditcardTemplate %}
            {% include newCreditcardTemplate %}
            {% include orderAmountInput %}

            <hr>

            <h3>Segundo cartão</h3>
            {%  set inputId = 2 %}
            {% include savedCreditcardTemplate %}
            {% include newCreditcardTemplate %}
            {% include orderAmountInput %}
            <div class="row">
                {% include submitTemplate %}
            </div>
        </form>
        {% if savedCreditcards != null %}
            <style>
                .newCreditcard {
                    display: none;
                }
            </style>
        {% endif %}
    {% else %}
        <h3>{{ credit_card.no_brands_enabled }}</h3>
    {% endif %}
</div>