<div class="tab-pane active" id="creditCardTab">
    {% if brandNames %}
        <div class="row">
            <h3 class="col-sm-12">Pagamento com cartão de crédito</h3>
            <div class="col-sm-12 mundipaggBrandBox">
                {% for brand in brandImages %}
                    <img src="{{ brand }}" />
                {% endfor %}
            </div>
        </div>
        {{ savedCreditcardTemplate }}
        {{ newCreditcardTemplate  }}
    {% else %}
        <h3>{{ credit_card.no_brands_enabled }}</h3>
    {% endif %}
</div>