<div class="tab-pane active" id="creditCardTab">
    {% if brandNames %}
        <form action="index.php?route=extension/payment/mundipagg/processCreditCard" method="post" data-mundicheckout-form id="mundi-credit-card-form">
            <div class="row">
                <div class="col-sm-12 mundipaggBrandBox">
                    {% for brand in brandImages %}
                        <img src="{{ brand }}" width="36" style="margin-left: 5px" />
                    {% endfor %}
                </div>
            </div>

            {{ savedCreditcardTemplate }}
            {{ newCreditcardTemplate  }}

            <div class="row">
                <span  id="token-error-message" class="text-danger"></span>
                <br>
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary float-to-right" id="submit-payment-button">Efetuar pagamento</button>
                </div>
            </div>
        </form>
    {% else %}
        <h3>{{ credit_card.no_brands_enabled }}</h3>
    {% endif %}
</div>